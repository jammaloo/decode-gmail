{
	"manifest_version": 2,

	"name": "Decode Gmail Source",
	"description": "This extension will decode emails from Gmail and show the raw source",
	"version": "1.0",

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"content_scripts": [{
		"matches": ["*://mail.google.com/*"],
		"js": ["content.js"]
	}],
	"permissions": [
		"activeTab"
	]
}